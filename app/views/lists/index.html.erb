<h1>To-Do Lists</h1>
<h3>Here are all of your to-do lists, <%= current_user.first_name %></h3>
<%= button_to "Add List", new_list_path, method: :get %>
<hr>
<% @lists.each do |list| %>
<%= button_to 'Delete',lists_path, method: :delete %>   
    <%= list.name %>
    <li>
      <%= list.body %>
    </li>
    <br>
    
<% end %>